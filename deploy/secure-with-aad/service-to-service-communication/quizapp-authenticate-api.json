{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "QuizAPIWebAppName": {
            "type": "string",
            "minLength": 1
        },
        "AADApiClientId": {
            "type": "string",
            "minLength": 1
        },
        "AADTenantId": {
            "type": "string",
            "minLength": 1
        }
    },
    "resources": [
        {
            "name": "[parameters('QuizAPIWebAppName')]",
            "type": "Microsoft.Web/sites",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-08-01",
            "properties": {},
            "resources": [
                {
                    "name": "authsettings",
                    "type": "config",
                    "dependsOn": [
                        "[concat('Microsoft.Web/sites/', parameters('QuizAPIWebAppName'))]"
                    ],
                    "apiVersion": "2015-08-01",
                    "properties": {
                        "enabled": true,
                        "unauthenticatedClientAction": 0,
                        "tokenStoreEnabled": true,
                        "clientId": "[parameters('AADApiClientId')]",
                        "issuer": "[concat('https://sts.windows.net/', parameters('AADTenantId'), '/')]",
                        "allowedAudiences": [
                            "[concat('https://', parameters('QuizAPIWebAppName'), '.azurewebsites.net')]",
                            "[parameters('AADApiClientId')]"
                        ],
                        "isAadAutoProvisioned": false,
                        "aadClientId": "[parameters('AADApiClientId')]",
                        "openIdIssuer": "[concat('https://sts.windows.net/', parameters('AADTenantId'), '/')]"
                    }
                }
            ]
        }
    ]
}